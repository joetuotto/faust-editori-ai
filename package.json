{
  "name": "faust",
  "version": "1.0.0",
  "description": "FAUST - Esoteerinen kirjoituseditori DEIS ja NOX -moodeilla",
  "author": "FAUST Team",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "postbuild": "node scripts/post-build.js",
    "verify-build": "node scripts/verify-assets.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:electron": "electron-mocha --require test/setup.js test/electron",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,css,md}\"",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build:assets": "mkdir -p dist && cp -r build/* dist/ || true",
    "type-check": "tsc --noEmit"
  },
  "build": {
    "appId": "com.faust.app",
    "productName": "FAUST",
    "copyright": "Copyright Â© 2025",
    "asar": false,
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/faust-dock-icon.icns",
      "darkModeSupport": true,
      "identity": null
    },
    "dmg": {
      "title": "FAUST Installer",
      "artifactName": "FAUST-DMG-INSTALLER-${arch}.dmg",
      "background": null,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "electron.js",
      "preload.js",
      "app.js",
      "index.html",
      "package.json",
      ".env",
      "utils/**/*",
      "src/**/*",
      "dist/**/*",
      "build/fonts/**/*",
      "build/icon.*"
    ],
    "directories": {
      "output": "dist-installer"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/runtime": "^7.28.6",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "babel-loader": "^10.0.0",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "electron-mocha": "^13.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "fs-extra": "^11.3.3",
    "html-webpack-plugin": "^5.6.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist",
      "<rootDir>/dist-installer"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/test/integration/\\._.*",
      "<rootDir>/test/electron/\\._.*",
      "/\\._.*"
    ],
    "testMatch": [
      "<rootDir>/test/**/*.test.js",
      "<rootDir>/test/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "app.js",
      "electron.js",
      "preload.js",
      "!node_modules/**",
      "!test/**"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.1",
    "@google/generative-ai": "^0.24.1",
    "docx": "^8.5.0",
    "dotenv": "^17.2.3",
    "openai": "^6.17.0"
  }
}
